@model ProgramacionFinal2.Models.ViewModels.EmpleadoVM
@{
    ViewData["Title"] = "Empleado_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oEmpleado.IdEmpleado == 0)
{

    <h1>Añadir Empleado</h1>
}
else
{
    <h1>Modificar Empleado</h1>
}




<div class="row">
    <div class="col-sm-4">

        <form asp-action="Empleado_Detalle" asp-controller="Empleado" method="post">
            <input type="hidden" asp-for="oEmpleado.IdEmpleado" />

            <div class="mb-2">
                <label class="form-label" asp-for="oEmpleado.Codigo">Codigo</label>
                <input class="form-control form-control-sm" asp-for="oEmpleado.Codigo" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oEmpleado.Nombre">Nombre</label>
                <input class="form-control form-control-sm" asp-for="oEmpleado.Nombre" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oEmpleado.Apellido">Apellido</label>
                <input class="form-control form-control-sm" asp-for="oEmpleado.Apellido" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oEmpleado.Nacimiento">Fecha de Nacimiento</label>
                <input class="form-control form-control-sm" asp-for="oEmpleado.Nacimiento" type="date" />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="oEmpleado.IdDepartamento">Departamento</label>
                <select class="form-select form-select-sm" asp-for="oEmpleado.IdDepartamento" asp-items="@Model.oListaDepartamento">
                    <option selected disabled>-- Seleccionar --</option>
                </select>
            </div>

            <div class="mb-2">

                @if (Model.oEmpleado.IdEmpleado == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>

                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Empleado">Volver</a>

            </div>

        </form>

    </div>
</div>

