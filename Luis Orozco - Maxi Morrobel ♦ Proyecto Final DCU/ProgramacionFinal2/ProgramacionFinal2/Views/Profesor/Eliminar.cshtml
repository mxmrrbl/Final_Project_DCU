@model ProgramacionFinal2.Models.Profesor

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class=" text-danger"> ¿Está seguro que quiere eliminar el Profesor?</h3>
<hr />
<div class="row">
    <div class="col-sm-4">

        <form asp-action="Eliminar" asp-controller="Profesor" method="post">
            <input type="hidden" asp-for="IdProfesor" />

            <div class="mb-2">
                <label class="form-label" asp-for="Codigo">Codigo</label>
                <input class="form-control form-control-sm" asp-for="Codigo" type="text" disabled />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Nombre">Nombre</label>
                <input class="form-control form-control-sm" asp-for="Nombre" type="text" disabled />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Apellido">Apellido</label>
                <input class="form-control form-control-sm" asp-for="Apellido" type="text" disabled />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Nacimiento">Fecha de Nacimiento</label>
                <input class="form-control form-control-sm" asp-for="Nacimiento" type="date" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="IdArea">Departamento</label>
                <input class="form-control form-control-sm" asp-for="IdAreaNavigation.Descripcion" type="text" disabled />

            </div>

            <div class="mb-2">

                <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar</button>
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Profesor">Volver</a>

            </div>

        </form>

    </div>
</div>

