@model ProgramacionFinal2.Models.ViewModels.ProfesorVM
@{
    ViewData["Title"] = "Profesor_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oProfesor.IdProfesor == 0)
{

    <h1>Añadir Profesor</h1>
}
else
{
    <h1>Modificar Profesor</h1>
}




<div class="row">
    <div class="col-sm-4">

        <form asp-action="Profesor_Detalle" asp-controller="Profesor" method="post">
            <input type="hidden" asp-for="oProfesor.IdProfesor" />

            <div class="mb-2">
                <label class="form-label" asp-for="oProfesor.Codigo">Codigo</label>
                <input class="form-control form-control-sm" asp-for="oProfesor.Codigo" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oProfesor.Nombre">Nombre</label>
                <input class="form-control form-control-sm" asp-for="oProfesor.Nombre" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oProfesor.Apellido">Apellido</label>
                <input class="form-control form-control-sm" asp-for="oProfesor.Apellido" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oProfesor.Nacimiento">Fecha de Nacimiento</label>
                <input class="form-control form-control-sm" asp-for="oProfesor.Nacimiento" type="date" />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="oProfesor.IdArea">Area</label>
                <select class="form-select form-select-sm" asp-for="oProfesor.IdArea" asp-items="@Model.oListaArea">
                    <option selected disabled>-- Seleccionar --</option>
                </select>
            </div>

            <div class="mb-2">

                @if (Model.oProfesor.IdProfesor == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>

                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Profesor">Volver</a>

            </div>

        </form>

    </div>
</div>

