@model ProgramacionFinal2.Models.Aula

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class=" text-danger"> ¿Está seguro que quiere eliminar el Aula?</h3>
<hr />
<div class="row">
    <div class="col-sm-4">

        <form asp-action="Eliminar" asp-controller="Aula" method="post">
            <input type="hidden" asp-for="IdAula" />

            <div class="mb-2">
                <label class="form-label" asp-for="Nombre">Aula de clases</label>
                <input class="form-control form-control-sm" asp-for="Nombre" type="text" disabled/>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Capacidad">Capacidad</label>
                <input class="form-control form-control-sm" asp-for="Capacidad" type="text" disabled />
            </div>


            <div class="mb-2">

                <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar</button>
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Aula">Volver</a>

            </div>

        </form>

    </div>
</div>

